
<h1>All Contacts</h1>

<ul class="list-unstyled">
	<% @contacts.each do |contact| %>
	<li><%= contact.first_name %></li> <li><%= contact.last_name %></li> <li><%= contact.email %></li> <li><%= contact.note %></li>
	<a href='/contacts/<%= contact.id %>/show'>Show Contact</a>
	<a href='/contacts/<%= contact.id %>/delete'>Delete</a>
	<a href='/contacts/<%= contact.id %>/edit'>Edit</a>
	<% end %>
</ul>



